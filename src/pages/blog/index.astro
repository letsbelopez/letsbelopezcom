---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="mx-auto w-full max-w-5xl px-4 pb-20 pt-12">
			<section class="space-y-10">
				<div class="space-y-4">
					<h1 class="text-4xl font-semibold md:text-5xl">Essays, experiments, and field notes.</h1>
					<p class="max-w-2xl text-lg text-[color:var(--muted)]">
						Long-form writing mixed with playful prototypes, day-in-the-life snapshots, and whatever I am
						testing out this week.
					</p>
				</div>
				<ul class="space-y-8">
					{
						posts.map((post) => (
							<li class="border-b border-[rgba(43,38,31,0.12)] pb-8">
								<a href={`/blog/${post.id}/`} class="group block space-y-3">
									<h3 class="text-2xl font-semibold text-[color:var(--ink)] transition group-hover:text-[color:var(--accent)]">
										{post.data.title}
									</h3>
									<p class="max-w-3xl text-sm text-[color:var(--muted)]">{post.data.description}</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
