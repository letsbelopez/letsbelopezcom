---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="mx-auto w-full max-w-5xl px-4 pb-20 pt-12">
			<section class="space-y-6">
				<h1 class="text-4xl font-semibold leading-tight md:text-5xl">Iâ€™m DeLopez, a maker and writer.</h1>
				<p class="max-w-xl text-lg text-[color:var(--muted)]">
					I build thoughtful digital products, document the process, and share the stories, lessons, and
					experiments that happen along the way.
				</p>
				<div class="flex flex-wrap items-center gap-6 text-sm">
					<a class="text-link font-mono text-xs uppercase tracking-[0.2em]" href="/about">
						Read more
					</a>
					<a class="text-link font-mono text-xs uppercase tracking-[0.2em] text-[color:var(--muted)]" href="/blog">
						View the blog
					</a>
				</div>
			</section>

			<section class="mt-16 space-y-8">
				<div class="flex flex-wrap items-end justify-between gap-4">
					<div>
						<h2 class="text-3xl font-semibold">Recent writing</h2>
					</div>
					<a class="text-link font-mono text-xs uppercase tracking-[0.2em] text-[color:var(--muted)]" href="/blog">
						Read more
					</a>
				</div>
				<ul class="space-y-6">
					{posts.map((post) => (
						<li class="border-b border-[rgba(43,38,31,0.12)] pb-6">
							<a class="group block space-y-2" href={`/blog/${post.id}/`}>
								<h3 class="text-xl font-semibold transition group-hover:text-[color:var(--accent)]">
									{post.data.title}
								</h3>
								<p class="max-w-2xl text-sm text-[color:var(--muted)]">{post.data.description}</p>
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
