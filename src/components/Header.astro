---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="sticky top-0 z-50 border-b border-[rgba(43,38,31,0.08)] bg-[rgba(247,241,232,0.85)] backdrop-blur">
	<div class="mx-auto w-full max-w-5xl px-4 py-4">
		<nav class="flex items-center justify-between">
			<a href="/" class="flex items-center gap-3 font-mono text-sm font-semibold uppercase tracking-[0.3em] text-[color:var(--ink)]">
				{SITE_TITLE}
			</a>
			<div class="hidden items-center gap-2 md:flex">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
			</div>
			<details class="relative md:hidden">
				<summary class="cursor-pointer select-none font-mono text-xs uppercase tracking-[0.3em] text-[color:var(--muted)] transition hover:text-[color:var(--accent)]">
					Menu
				</summary>
				<div class="absolute right-0 mt-3 w-44 rounded-2xl border border-[rgba(43,38,31,0.12)] bg-[color:var(--paper)] p-2 shadow-[0_12px_30px_rgba(43,38,31,0.14)]">
					<HeaderLink href="/" class="block rounded-lg px-3 py-2">Home</HeaderLink>
					<HeaderLink href="/about" class="block rounded-lg px-3 py-2">About</HeaderLink>
					<HeaderLink href="/blog" class="block rounded-lg px-3 py-2">Blog</HeaderLink>
				</div>
			</details>
		</nav>
	</div>
</header>
